<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- סרגל חיפוש -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_for_recipes"
        android:layout_marginBottom="16dp"
        android:autofillHints="search"
        android:inputType="text"/>

    <!-- כותרת מתכונים פופולריים -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Recipes"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- תצוגה של מתכונים פופולריים -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:id="@+id/popularRecipesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- פריטים של מתכונים יתווספו כאן -->
        </LinearLayout>
    </ScrollView>

    <!-- כותרת קטגוריות -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- תצוגה של קטגוריות -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/categoriesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- פריטים של קטגוריות יתווספו כאן -->
        </LinearLayout>
    </ScrollView>

    <!-- שדות להזנת פרטי מתכון חדש -->
    <EditText
        android:id="@+id/editTextRecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Name"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextRecipeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Description"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextRecipeIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredients (comma separated)"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextRecipeInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instructions"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"/>

    <EditText
        android:id="@+id/editTextRecipeImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL"
        android:layout_marginBottom="16dp"/>

    <!-- כפתור לשמירת מתכון חדש -->
    <Button
        android:id="@+id/buttonSaveRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Recipe"/>
</LinearLayout>
