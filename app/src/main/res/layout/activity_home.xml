<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f7f7f7"
    tools:context=".HomeActivity">

    <!-- סרגל חיפוש -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_for_recipes"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_bar_background"
        android:padding="12dp"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:inputType="text"/>

    <!-- כותרת מתכונים פופולריים -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Recipes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="#333333"/>

    <!-- תצוגה של מתכונים פופולריים -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popularRecipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner_background"
        android:padding="8dp"/>

    <!-- כותרת קטגוריות -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="#333333"/>

    <!-- תצוגה של קטגוריות -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/categoriesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_background"
            android:padding="8dp">
            <!-- פריטים של קטגוריות יתווספו כאן -->
        </LinearLayout>
    </ScrollView>

    <!-- כפתור להוספת מתכון חדש -->
    <Button
        android:id="@+id/buttonAddNewRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a New Recipe"
        android:backgroundTint="#FF4081"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
</LinearLayout>
